{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "rootDir": ".",
        "sourceMap": true,
        "declaration": true,
        "listFiles": true,
        "newLine": "LF",
        "noEmitOnError": true,
        "inlineSources": true
    },
    "filesGlob": [
        "./**/*.ts",
        "./**/*.tsx",
        "!./**/*.d.ts",
        "./lib/typings/**/*.d.ts",
        "./typings/**/*.d.ts",
        "!./example/**/*.ts",
        "!./test/expected/**/*.ts",
        "!./test/fixture/**/*.ts",
        "!./node_modules/**/*",
        "./node_modules/typescript/lib/lib.es6.d.ts"
    ],
    "exclude": [],
    "files": [
        "./lib/cli.ts",
        "./lib/formatter.ts",
        "./lib/index.ts",
        "./lib/provider/base.ts",
        "./lib/provider/editorconfig.ts",
        "./lib/provider/tsconfigjson.ts",
        "./lib/provider/tslintjson.ts",
        "./lib/utils.ts",
        "./test/cli/main.ts",
        "./test/indexSpec.ts",
        "./lib/typings/editorconfig.d.ts",
        "./typings/bundle.d.ts",
        "./typings/empower/empower.d.ts",
        "./typings/glob-expand/glob-expand.d.ts",
        "./typings/glob/glob.d.ts",
        "./typings/minimatch/minimatch.d.ts",
        "./typings/mocha/mocha.d.ts",
        "./typings/node/node.d.ts",
        "./typings/power-assert-formatter/power-assert-formatter.d.ts",
        "./typings/power-assert/power-assert.d.ts",
        "./node_modules/typescript/lib/lib.es6.d.ts"
    ]
}