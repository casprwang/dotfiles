module.exports = (title='', options={}) ->
  options.timeOut ?= 5000
  {timeOut} = options
  addInfo: (message, options={ dismissable: true }) ->
    options.detail = message
    notification = atom.notifications.addInfo title, options
    setTimeout((=> notification.dismiss()), timeOut)
    notification
  addSuccess: (message, options={ dismissable: true }) ->
    options.detail = message
    notification = atom.notifications.addSuccess title, options
    setTimeout((=> notification.dismiss()), timeOut)
    notification
  addError: (message, options={ dismissable: true }) ->
    options.detail = message
    notification = atom.notifications.addError title, options
    setTimeout((=> notification.dismiss()), timeOut)
    notification
  addWarning: (message, options={ dismissable: true }) ->
    options.detail = message
    notification = atom.notifications.addWarning title, options
    setTimeout((=> notification.dismiss()), timeOut)
    notification
